@model UserClaimsViewModel

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
                <div class="card-header">
                    <h2>Manage User Claims</h2>
                </div>

                <form asp-action="ManageUserClaims" asp-area="Admin" asp-controller="Home" method="post" asp-antiforgery="true"> 
                    <input type="hidden" asp-for="@Model.UserId" />
                    <div class="card-body">
                        @for(int i = 0; i < Model.Claims.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label h4" asp-for="@Model.Claims[i].IsSelected">
                                    @Model.Claims[i].ClaimType
                                </label>
                            </div>
                        }

                        <input type="submit" value="Update" class="btn btn-primary mt-4" />
                    </div>
                </form>
        </div>
    </div>
</div>